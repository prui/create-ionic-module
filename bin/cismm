#! /usr/bin/env node

var path = require('path');
var argv = require('yargs').argv;

var cmd = argv._[0];

if (cmd) {
    init(cmd, 'ionSideMenus');
} else {
    showTip();
}

function init(name, type) {
    console.log('  create an ion-side-menus module named \"' + cmd + '\".....');
    var generate = require(path.resolve(__dirname, '..', 'src', 'generate.js'));
    generate.init(name, type);
}


function showTip() {
    console.error('  you should be input an module name!!');
}



